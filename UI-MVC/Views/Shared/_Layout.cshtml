<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - F1 Car Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }

        .content {
            flex: 1;
        }
    </style>
</head>
<body>
<div class="wrapper">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">F1 Car Management</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/F1Car/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/FastestLap/Index">Fastest Laps</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/F1Car/Add">Add Car</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Privacy">Privacy</a>
                </li>
            </ul>
        </nav>
    </header>

    <main role="main" class="container content">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3">
        &copy; 2024 - Maxime Blondeel
    </footer>
</div>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
